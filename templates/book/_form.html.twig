{{ form_start(form) }}
<div class="form-card-body">
    <div class="row">
        <div class="col">
            {{ form_row(form.isbn, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.subtitle, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.author, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.published, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.publisher, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.pages, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.website, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <button class="btn">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
